@model ElRegistratura.Models.ViewModelIndexTickets

@{
    ViewData["Title"] = "Главная";
}

<h1>Главная</h1>
<div> <a class="navbar-brand" asp-controller="Home" asp-action="AdminView">Назад</a> </div>
@*<p>
    <a asp-action="Create">Create New</a>
</p>*@

<form method="get">
    <div>
        <label>Статус: </label>
        <select name="status" asp-items="Model.Status"></select>
  
        <input type="submit" value="Фильтр" />
    </div>
</form>
    <table class="table">
    <thead>
        <tr>
            <th>
                Расписание
            </th>
            <th>
                Пользователь
            </th>
            <th>
                Время
            </th>
            <th>
                Статус
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ticket) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Schedule.Data)
                @Html.DisplayFor(modelItem => item.Schedule.Doctor.LastName)
                @Html.DisplayFor(modelItem => item.Schedule.Doctor.FirstName)
                @Html.DisplayFor(modelItem => item.Schedule.Doctor.Patronymic)
                @Html.DisplayFor(modelItem => item.Schedule.Doctor.Clinic.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.LastName)
                @Html.DisplayFor(modelItem => item.User.FirstName)
                @Html.DisplayFor(modelItem => item.User.Patronymic)
                @Html.DisplayFor(modelItem => item.User.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> 
              @*  <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>*@
            </td>
        </tr>
}
    </tbody>
</table>


