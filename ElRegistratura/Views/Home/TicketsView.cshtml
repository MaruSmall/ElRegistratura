@model IEnumerable<ElRegistratura.Models.Ticket>

@{
    ViewData["Title"] = "Расписание";
}

<h1>Расписание</h1>
<h3>Время</h3>
<div>
    <a class="navbar-brand" asp-controller="Home" asp-action="ScheduleDoctorsView">Назад</a>
</div>

<form>
    @foreach(var item in Model.OrderBy(t=>t.Time))
{
        if(item.StatusId==1)
    {
    <button  type="submit" class="btn btn-primary "> 
    <a class="btn-primary" asp-area="" asp-action="CheckDataView" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Time)</a> 
    </button>
    }
    else
    {
    <button type="submit" class="btn redColorBtn" > 
    <a class="redColorBtn" asp-area="" >@Html.DisplayFor(modelItem => item.Time)</a> 
    </button> 
    }
    
}
</form>
